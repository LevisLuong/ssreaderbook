<?xml version="1.0" encoding="utf-8"?>
<!--
   Comment bookmark item
-->

<LinearLayout android:id="@+id/bookmark_item_body"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="3dip"
              android:layout_marginLeft="2dip"
              android:layout_marginRight="2dip"
              android:layout_marginTop="3dip"
              android:baselineAligned="false"
              android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/book_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_marginRight="4dip"
        android:src="@drawable/ic_menu_goto"
        />

    <LinearLayout android:id="@+id/shortcut_bookmark_item_text"
                  xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical|fill_horizontal"
                  android:baselineAligned="false"
                  android:orientation="vertical">


        <TextView
            android:id="@+id/bookmark_item_title"
            style="@style/Holo.TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="10% Title Text"/>

        <TextView
            android:id="@+id/bookmark_item_pos_text"
            style="@style/Holo.TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:maxLines="3"
            android:singleLine="false"
            android:text="Position text bla bla bla bla bla..."
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bookmark_item_comment_text"
            style="@style/Holo.TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:ellipsize="end"
            android:maxLines="3"
            android:singleLine="false"/>
    </LinearLayout>
</LinearLayout>
