<?xml version="1.0" encoding="utf-8"?>
<!--
   Book item layout for CR3 file browser
-->

<LinearLayout android:id="@+id/browser_item_body"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="1dip"
              android:layout_marginLeft="2dip"
              android:layout_marginRight="2dip"
              android:layout_marginTop="1dip"
              android:baselineAligned="false"
              android:minHeight="?android:attr/listPreferredItemHeight"
              android:orientation="horizontal"
              android:paddingLeft="2dip"
              android:paddingRight="?android:attr/scrollbarSize"
    >

    <LinearLayout
        android:id="@+id/browser_item_name_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|fill_horizontal"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="1dip"
        android:layout_marginTop="3dip"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="vertical">


        <TextView
            android:id="@+id/book_author"
            style="@style/Holo.TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="2"
            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="false"
            android:text="author"/>

        <TextView
            android:id="@+id/book_name"
            style="@style/Holo.TextAppearance.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="3"
            android:maxLines="3"
            android:singleLine="false"
            android:text="title"/>

        <TextView
            android:id="@+id/book_series"
            style="@style/Holo.TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="2"
            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="false"
            android:text="series"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="5dip"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/browser_item_field1"
                style="@style/Holo.TextAppearance.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="0dip"
                android:layout_marginRight="2dip"
                android:singleLine="true"
                android:text="field1"/>

            <TextView
                android:id="@+id/browser_item_field2"
                style="@style/Holo.TextAppearance.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="0dip"
                android:singleLine="true"
                android:text="field2"/>
            <!-- TextView android:id="@+id/browser_item_field4"
                style="@style/Holo.TextAppearance.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:singleLine="true"
                android:layout_gravity="right" />
            <TextView android:id="@+id/browser_item_field3"
                style="@style/Holo.TextAppearance.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="2dip"
                android:layout_marginRight="2dip"
                android:singleLine="true"
                android:layout_gravity="right" /-->

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/browser_item_misc_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:baselineAligned="false"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/book_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1"
            android:padding="1dip"
            android:scaleType="fitCenter"
            />
    </LinearLayout>

</LinearLayout>
