<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">


    <ImageView
        android:id="@+id/colorBorder"
        android:layout_width="8dp"
        android:layout_height="@dimen/standard_dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="2dp"
        android:src="@color/holo_blue_light"/>

    <!-- Use same ID to use built-in features -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/colorBorder"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_bookchapter_titlechapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/Holo.TextAppearance.Medium"
            android:textColor="@color/holo_blue_light"/>

        <TextView
            android:id="@+id/card_bookchapter_sizechapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/Holo.TextAppearance.Small"/>
    </LinearLayout>


</RelativeLayout>