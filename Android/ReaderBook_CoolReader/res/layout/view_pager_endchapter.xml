<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/vp_endchapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Hết Chapter"
        android:textColor="#000000"
        android:textSize="72sp"/>

    <Button
        android:id="@+id/vp_endchapter_nextchapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vp_endchapter"
        android:layout_centerHorizontal="true"
        android:text="Đọc Tiếp"
        android:textColor="#000000"
        />

    <Button
        android:id="@+id/vp_endchapter_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vp_endchapter_nextchapter"
        android:layout_centerHorizontal="true"
        android:text="Quay Lại"
        android:textColor="#000000"/>
</RelativeLayout>