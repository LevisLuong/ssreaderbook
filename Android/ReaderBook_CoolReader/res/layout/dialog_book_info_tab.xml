<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:stretchColumns="*">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/dlginfo_imgcover"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/khung_sach"
                android:paddingLeft="1dp"
                android:paddingRight="6dp"
                android:paddingTop="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/book_exam"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/afc_5dp"
                    android:layout_marginTop="@dimen/afc_5dp"
                    android:shrinkColumns="1"
                    >

                    <TableRow>

                        <TextView
                            style="@style/Holo.TextAppearance.Medium.Inverse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/afc_10dp"
                            android:text="Tựa sách:"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/dlginfo_txtTitle"
                            style="@style/Holo.TextAppearance.Medium.Inverse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:singleLine="false"
                            android:text=""
                            />

                    </TableRow>

                    <TableRow>

                        <TextView
                            style="@style/Holo.TextAppearance.Medium.Inverse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/afc_10dp"
                            android:text="Tác giả:"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/dlginfo_txtAuthor"
                            style="@style/Holo.TextAppearance.Medium.Inverse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:singleLine="false"
                            android:text=""
                            />
                    </TableRow>

                    <TableRow>

                        <TextView
                            style="@style/Holo.TextAppearance.Medium.Inverse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/afc_10dp"
                            android:text="Thể loại:"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/dlginfo_txtCategory"
                            style="@style/Holo.TextAppearance.Medium.Inverse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:scrollbars="vertical"
                            android:text=""/>
                    </TableRow>
                </TableLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_chapters"/>

                        <TextView
                            android:id="@+id/dlginfo_txtchapters"
                            style="@style/Holo.TextAppearance.Small.Inverse"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="0"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_downloads"/>

                        <TextView
                            android:id="@+id/dlginfo_txtdownloads"
                            style="@style/Holo.TextAppearance.Small.Inverse"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="0"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_view"/>

                        <TextView
                            android:id="@+id/dlginfo_txtview"
                            style="@style/Holo.TextAppearance.Small.Inverse"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:text="0"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/afc_5dp"
                    android:layout_marginTop="@dimen/afc_5dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/afc_5dp"
                    android:paddingRight="@dimen/afc_5dp">

                    <Button
                        android:id="@+id/dlginfo_like"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_marginRight="@dimen/afc_10dp"
                        android:layout_weight="1"
                        android:background="@drawable/unlike_btn"
                        android:text="0"
                        />

                    <Button
                        android:id="@+id/dlginfo_cont_read"
                        android:layout_width="wrap_content"
                        android:layout_height="34dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_app"
                        android:text="Đọc tiếp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.viewpagerindicator.TabPageIndicator
                android:id="@+id/dlginfo_indicator"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/apptheme_color"
                />

            <android.support.v4.view.ViewPager
                android:id="@+id/dlginfo_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>