<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:stretchColumns="*">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dlginfo_imgcover"
                android:layout_width="100dp"
                android:layout_height="160dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/afc_10dp"
                android:src="@drawable/book_exam"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/apptheme_color"
                    android:text="Thông tin sách"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/afc_5dp"
                    android:layout_marginTop="@dimen/afc_5dp"
                    android:shrinkColumns="1">

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/afc_10dp"
                            android:text="Tựa sách:"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/dlginfo_txtTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/afc_10dp"
                            android:text="Tác giả:"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/dlginfo_txtAuthor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </TableRow>

                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/afc_10dp"
                            android:text="Chuyên mục:"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/dlginfo_txtCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/apptheme_color"
            android:text="Tóm tắt"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/dlginfo_txtSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:padding="@dimen/afc_5dp"
            android:scrollbars="vertical"
            android:text="In publishing and graphonlvisual presentation."/>

        <LinearLayout
            android:id="@+id/dlginfo_chapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/apptheme_color"
                android:text="Chapter"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
            <RelativeLayout
                android:id="@+id/dlginfo_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>